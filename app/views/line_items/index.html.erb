<h2>Your cart</h2>

<table>
  <tr>
	<th>Picture</th>
    <th>Product</th>
	<th>Price</th>
    <th>Quantity</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @line_items.each do |line_item| %>
  <tr>
	<td><%= image_tag line_item.product.picture_url %></td>
    <td><%= line_item.product.name %></td>
    <td><%= line_item.product.price %></td>
    <td><%= line_item.quantity %></td>
    <td><%= link_to 'Show', cart_line_item_path(@cart, line_item) %></td>
    <td><%= link_to 'Edit', edit_cart_line_item_path(@cart, line_item) %></td>
    <td><%= link_to 'Destroy', cart_line_item_path(@cart, line_item), confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Line item', new_cart_line_item_path(@cart) %>
<%= link_to 'Checkout', checkout_cart_path(@cart) %>

<br />
Total: <%= number_to_currency @cart.total %>
